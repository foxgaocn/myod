= form_for @order_item do |f|
  - if @order_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order_item.errors.count, "error")} prohibited this order_item from being saved:"
      %ul
        - @order_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product
    = f.text_field :product
  .field
    = f.label :client
    = f.text_field :client
  .field
    = f.label :quantity
    = f.text_field :quantity
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :buy_price
    = f.text_field :buy_price
  .field
    = f.label :sale_price
    = f.text_field :sale_price
  .field
    = f.label :sale_price_unit
    = f.text_field :sale_price_unit
  .actions
    = f.submit 'Save'

%h1 Listing order_items

%table
  %thead
    %tr
      %th Product
      %th Client
      %th Quantity
      %th Status
      %th Buy price
      %th Sale price
      %th Sale price unit
      %th
      %th
      %th

  %tbody
    - @order_items.each do |order_item|
      %tr
        %td= order_item.product
        %td= order_item.client
        %td= order_item.quantity
        %td= order_item.status
        %td= order_item.buy_price
        %td= order_item.sale_price
        %td= order_item.sale_price_unit
        %td= link_to 'Show', order_item
        %td= link_to 'Edit', edit_order_item_path(order_item)
        %td= link_to 'Destroy', order_item, :method => :delete, :data => { :confirm => 'Are you sure?' }


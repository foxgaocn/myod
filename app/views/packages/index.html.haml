%h1 Listing packages

%table
  %thead
    %tr
      %th Label
      %th Client
      %th User
      %th Number
      %th
      %th
      %th

  %tbody
    - @packages.each do |package|
      %tr
        %td= package.label
        %td= package.client
        %td= package.user
        %td= package.number
        %td= link_to 'Show', package
        %td= link_to 'Edit', edit_package_path(package)
        %td= link_to 'Destroy', package, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br


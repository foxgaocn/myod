= form_for @package do |f|
  - if @package.errors.any?
    #error_explanation
      %h2= "#{pluralize(@package.errors.count, "error")} prohibited this package from being saved:"
      %ul
        - @package.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :client
    = f.text_field :client
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :number
    = f.text_field :number
  .actions
    = f.submit 'Save'

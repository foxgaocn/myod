%section.login
  .center
    %h3 请登陆
  =form_for resource, as: resource_name, url: session_path(resource_name)do |f|
    .form-group
      =f.label :email
      =f.email_field :email, autofocus: true, class: "form-control"
    .form-group
      = f.label :password, "密码"
      = f.password_field :password, autocomplete: "off",  class: "form-control"
    -if devise_mapping.rememberable?
      =f.check_box :remember_me, :default => 1
      =f.label :remember_me, "在此设备上记住我"
    
    %br
    .center
      %button.btn.btn-success{type: "submit"} 登陆

  %hr
  .center
    还没有注册？
  .buttons
    =link_to "免费注册", new_registration_path(resource_name), {class: "btn btn-warning", role:"button"}
    =link_to "先试试看", try_it_path, {class: "btn btn-warning", role:"button"}

